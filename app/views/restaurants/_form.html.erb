<%= form_for @restaurant do |f| %>


    <div class="field">
    	<%= f.label :name %> 
    	<%= f.text_field :name %>
    </div>

    <!-- ********* -->

    <div class="field">
    	<%= f.label :address %> 
    	<%= f.text_field :address %>
    </div>

    <div class="field">
    	<%= f.label :phone_number %> 
    	<%= f.text_field :phone_number %>
    </div>

    <div class="field">
    	<%= f.label :description %> 
    	<%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :capacity %> 
      <%= f.number_field :capacity, :min => 1, :max => 250 %>
    </div>


  	<%= f.submit %>


<% end %>